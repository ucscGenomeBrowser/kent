<%= error_messages_for :user %>
<% form_for :user do |f| -%>
<p>
    <label for="password">New Password</label><br />
    <%= f.password_field :password %>
</p>
<p>
    <label for="password_confirmation">Confirm New Password</label><br />
    <%= f.password_field :password_confirmation %>
</p>
<p>
    <%= submit_tag 'Submit' %>
</p>
<% end -%>
